{
  "name": "tsundere",
  "version": "0.0.2",
  "description": "Modern task runner for the stubborn ones",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-s build:cleanup build:esbuild build:es5 build:types build:bundle",
    "build:cleanup": "rimraf dist/**/*.js",
    "build:esbuild": "esbuild build.ts --outfile=__dev__/build.js --target=es2019 --format=cjs && node __dev__/build.js",
    "build:es5": "babel __dev__/**/*.js --out-dir __dev__",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts --no-check",
    "build:bundle": "esbuild __dev__/index.js --bundle --platform=node --outfile=dist/index.js --minify-whitespace --minify-syntax",
    "test": "run-s build test:run",
    "test:run": "esbuild test.ts --outfile=__dev__/test.js --target=es2019 --format=cjs && node __dev__/test.js",
    "lint": "xo --fix"
  },
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tommywalkie/tsundere/issues"
  },
  "homepage": "https://github.com/tommywalkie/tsundere#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommywalkie/tsundere.git"
  },
  "keywords": [
    "task",
    "runner",
    "tsundere",
    "build"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-async-generator-functions": "^7.12.1",
    "@babel/plugin-transform-for-of": "^7.12.1",
    "@types/node": "^14.14.10",
    "dts-bundle-generator": "^5.5.0",
    "esbuild": "^0.8.16",
    "eslint-config-xo-typescript": "^0.36.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "xo": "^0.35.0"
  }
}
