{
  "name": "tsundere",
  "version": "0.0.5",
  "description": "Modern task runner for the stubborn ones",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/bin.js",
  "scripts": {
    "build": "yall -p build:transpile build:types && yall -p build:bundle build:cli",
    "build:cleanup": "rimraf dist/**/*.js",
    "build:cli": "esbuild src/cli.ts --outfile=dist/bin.js --target=es2019 --format=cjs",
    "build:esbuild": "esbuild build.ts --outfile=__dev__/build.js --target=es2019 --format=cjs && node __dev__/build.js",
    "build:es5": "babel __dev__/**/*.js --ignore=__dev__/benches/**/* --out-dir __dev__",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts --no-check",
    "build:bundle": "rollup -c rollup.config.ts",
    "build:transpile": "yall -s build:cleanup build:esbuild build:es5",
    "test": "yall -s build:cleanup build:esbuild build:es5 build:bundle test:setup test:start",
    "test:setup": "esbuild test.ts --outfile=__dev__/test.js --target=es2019 --format=cjs",
    "test:start": "node __dev__/test.js",
    "check-license": "npx license-ci-checker"
  },
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tommywalkie/tsundere/issues"
  },
  "homepage": "https://github.com/tommywalkie/tsundere#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommywalkie/tsundere.git"
  },
  "keywords": [
    "task",
    "runner",
    "tsundere",
    "build"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-async-generator-functions": "^7.12.1",
    "@babel/plugin-transform-for-of": "^7.12.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/node": "^14.14.10",
    "benchmark": "^2.1.4",
    "dts-bundle-generator": "^5.5.0",
    "esbuild": "^0.8.16",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "yall-scripts": "^1.1.0"
  }
}
